<Window x:Class="WPFChess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFChess"
        mc:Ignorable="d"
        Title="Chess" Height="450" Width="450">
    <Window.Resources>
        <Style x:Key="BlackBack">
            <Setter Property="Control.Background" Value="Black" />
            <Setter Property="TextElement.Foreground" Value="White" />
        </Style>
        <Style x:Key="WhiteBack">
            <Setter Property="Control.Background" Value="White" />
        </Style>
    </Window.Resources>
    <Grid x:Name="MainDesk" Background="Gray" Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button x:Name="x1y1" Grid.Column="0" Grid.Row="0" Content="1" Style="{StaticResource BlackBack}"/>
        <Button x:Name="x2y1" Grid.Column="1" Grid.Row="0" Content="2" Style="{StaticResource WhiteBack}"/>
        <Button x:Name="x3y1" Grid.Column="2" Grid.Row="0" Content="3" Style="{StaticResource BlackBack}"/>
        <Button x:Name="x4y1" Grid.Column="3" Grid.Row="0" Content="4" Style="{StaticResource WhiteBack}"/>
        <Button x:Name="x5y1" Grid.Column="4" Grid.Row="0" Content="5" Style="{StaticResource BlackBack}"/>
        <Button x:Name="x6y1" Grid.Column="5" Grid.Row="0" Content="6" Style="{StaticResource WhiteBack}"/>
        <Button x:Name="x7y1" Grid.Column="6" Grid.Row="0" Content="7" Style="{StaticResource BlackBack}"/>
        <Button x:Name="x8y1" Grid.Column="7" Grid.Row="0" Content="8" Style="{StaticResource WhiteBack}"/>

        <Button x:Name="x1y2" Grid.Column="0" Grid.Row="1" Content="1" Style="{StaticResource WhiteBack}"/>
        <Button x:Name="x2y2" Grid.Column="1" Grid.Row="1" Content="2" Style="{StaticResource BlackBack}"/>
        <Button x:Name="x3y2" Grid.Column="2" Grid.Row="1" Content="3" Style="{StaticResource WhiteBack}"/>
        <Button x:Name="x4y2" Grid.Column="3" Grid.Row="1" Content="4" Style="{StaticResource BlackBack}"/>
        <Button x:Name="x5y2" Grid.Column="4" Grid.Row="1" Content="5" Style="{StaticResource WhiteBack}"/>
        <Button x:Name="x6y2" Grid.Column="5" Grid.Row="1" Content="6" Style="{StaticResource BlackBack}"/>
        <Button x:Name="x7y2" Grid.Column="6" Grid.Row="1" Content="7" Style="{StaticResource WhiteBack}"/>
        <Button x:Name="x8y2" Grid.Column="7" Grid.Row="1" Content="8" Style="{StaticResource BlackBack}"/>

        <Button x:Name="x1y3" Grid.Column="0" Grid.Row="2" Content="1" Style="{StaticResource BlackBack}"/>
        <Button x:Name="x2y3" Grid.Column="1" Grid.Row="2" Content="2" Style="{StaticResource WhiteBack}"/>
        <Button x:Name="x3y3" Grid.Column="2" Grid.Row="2" Content="3" Style="{StaticResource BlackBack}"/>
        <Button x:Name="x4y3" Grid.Column="3" Grid.Row="2" Content="4" Style="{StaticResource WhiteBack}"/>
        <Button x:Name="x5y3" Grid.Column="4" Grid.Row="2" Content="5" Style="{StaticResource BlackBack}"/>
        <Button x:Name="x6y3" Grid.Column="5" Grid.Row="2" Content="6" Style="{StaticResource WhiteBack}"/>
